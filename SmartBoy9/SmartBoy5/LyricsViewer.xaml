<Window x:Class="SmartBoy.LyricsViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding Path=Title}" Height="{Binding Path=LyricsLineCount}" Width="300">
    <Grid>
        <ScrollViewer HorizontalScrollBarVisibility="Auto">
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding Path=Lyrics}" VerticalAlignment="Top" Width="150"/>
        </ScrollViewer>
    </Grid>
</Window>
